<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EpicStore - add slider</title>
    <style>
      a {
        color: white;
      }
      body {
        background: #222;
        color: white;
      }
      form {
        position: relative;
        padding: 50px;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        margin-left: -250px;
        left: 50%;
        border: solid #111 2px;
        width: 500px;
        height: auto;
      }
      label {
        padding: 10px 0;
        font-size: 18px;
      }
      input {
        display: block;
        padding: 10px;
        font-size: 18px;
      }
      .uppercase {
      }
      textarea {
        width: 100%;
        height: 300px;
        padding: 10px;
        font-size: 18px;
      }

      button {
        padding: 10px;
        cursor: pointer;
        background: lightgreen;
        color: #111;
        margin-top: 10px;
      }
    </style>
    <script type="text/javascript">
      previewFile = () => {
        const preview = document.querySelector(".img");
        const file = document.querySelector("input[type=file]").files[0];
        const reader = new FileReader();

        reader.addEventListener(
          "load",
          () => {
            preview.src = reader.result;
          },
          false
        );

        if (file) {
          reader.readAsDataURL(file);
        }
      };
    </script>
  </head>
  <body>
    <%- include("nav") -%> <%= typeof msg != 'undefined' ? msg : '' %>
    <form method="POST" enctype="multipart/form-data">
      <label for="gameName">Name:</label>
      <input type="text" name="gameName" required/>
      <label for="smallDesc">Small Description:</label>
      <textarea type="text" name="smallDesc" required></textarea>
      <label for="aboutGame">About the game:</label>
      <textarea type="text" name="aboutGame" required></textarea>
      <label for="developer">Developer:</label>
      <input type="text" name="developer" required/>
      <label for="publisher">Publisher:</label>
      <input type="text" name="publisher" required/>
      <label for="releaseDate">Release Date:</label>
      <input type="date" name="releaseDate" required/>
      <label for="tags">Tags:</label>
      <input type="text" name="tags" placeholder="ex: simulation, action ..." required/>
      <label for="rating">Rating:</label>
      <input type="text" name="rating" required/>
      <label for="platform">Platform:</label>
      <select name="platform">
        <option>Windows</option>
        <option>Mac</option>
        <option>Linux</option>
      </select>
      <label for="gamePrice">Game Price:</label>
      <input type="number" name="gamePrice" step="0.01"/>$
      <label for="sale">Sale: (type nothing if you don't want the game to be on sale)</label>
      <input type="number" name="sale" />%
      <label for="isFree">Add this game as a free game for a limited time: </label>
      <select name="isFree" >
        <option>True</option>
        <option>False</option>
      </select>
      <label>Page slideshow iframes</label>
      <textarea type="text" name="iframeURL" placeholder="ex: iframeURL1,iframeURL2,iframeURL3"></textarea>
      <label>Game Logo image</label>
      <input type="file" name="gameLogo" required/>
      <label>Game Horizontal Cover</label>
      <input type="file" name="gameHCover" required/>
      <label>Game Vertical Cover</label>
      <input type="file" name="gameVCover" required/>
      <label>Page slideshow images</label>
      <input type="file" multiple name="slideshowImages"/>
      <label>Page screenshots</label>
      <input type="file" multiple name="screenshots"/>
      <button type="submit">Add game</button>
    </form>
  </body>
</html>
